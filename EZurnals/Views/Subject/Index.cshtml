@model List<SubjectModel>
@{
    ViewData["Title"] = "Subjects";
}

<h2>Mācību priekšmeti</h2>
@if (Model.Count > 0)
{
<table class="table table-striped">
    <tr>
        <th>Nosaukums</th>
        <th></th>
    </tr>
    @foreach (var sub in Model)
    {
        <tr>
            <td>@sub.Name</td>
            <td><a asp-controller="Grade" asp-action="ViewSubjectGrades" asp-route-name="@sub.Name">Apskatīt atzīmes</a></td>
        </tr>
    }
</table>
}
else
{
    <div>Mācību priekšmetu saraksts ir tukšs!</div>
}


