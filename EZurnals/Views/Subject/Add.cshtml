@model SubjectModel
@{
    ViewData["Title"] = "Add_subject";
}
<h2>Pievienot mācību priekšmetu</h2>
@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Subject" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Pievienot</button>
        </div>
    </div>
</form>

