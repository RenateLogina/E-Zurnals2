@model List<StudentModel>
@{
    ViewData["Title"] = "Students";
}

<h2>Skolnieki</h2>
@if(Model.Count > 0)
{
    <table class="table table-striped">
        <tr>
            <th>Uzvārds</th>
            <th>Vārds</th>
            <th>Dzimšanas g.</th>
            <th>Klase</th>
            <th>Vidējā atzīme</th>
            <th></th>
        </tr>
        @foreach(var student in Model)
        {
    <tr>
        <td>@student.Surname</td>
        <td>@student.Name</td>
        <td>@student.BirthYear</td>
        <td>@student.Klase</td>
        <td>@student.AverageGrade</td>
        <td><a asp-controller="Student" asp-action="ViewStudentGrades" asp-route-oStudentId="@student.OStudentId">Aplūkot</a></td>
    </tr>
        }
    </table>
}
else
{
    <div>Skolēnu saraksts ir tukšs!</div>
}

