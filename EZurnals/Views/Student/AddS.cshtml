@model StudentModel
@{
    ViewData["Title"] = "Add_student";
}

<h2>Pievienot skolnieku</h2>
@Html.ValidationSummary()
<form class="form-horizontal" asp-controller="Student" asp-action="AddS" method="post">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Surname" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="BirthYear" class="col-sm-2 control-label"></label>
        <div class="col-sm-2">
            <input class="form-control" asp-for="BirthYear" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Klase" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Klase" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Pievienot</button>
        </div>
    </div>

</form>

