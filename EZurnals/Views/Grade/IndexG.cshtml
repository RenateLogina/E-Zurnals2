@model List<GradeModel>
@{
    ViewData["Title"] = "Vērtējumi";
}

<h2>Vērtējumi</h2>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <tr>
            <th>Priekšmets</th>
            <th>Skolēna uzvārds</th>
            <th>Skolēna vārds</th>
            <th>Apraksts</th>
            <th>Vērtējums</th>
        </tr>
        @foreach (var grade in Model)
        {
         <tr>
                <td>@grade.SubjectName</td>
                <td>@grade.StudentSurname</td>
                <td>@grade.StudentName</td>
                <td>@grade.Comment</td>
                <td>@grade.Grade</td>
         </tr>
        }
    </table>
}
else
{
    <div>Vērtējumu saraksts ir tukšs!</div>
}