@model List<GradeModel>
@{
    ViewData["Title"] = "Vērtējumi";
}

<h2>Vērtējumi</h2>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <tr>
            <th>Skolēna uzvārds</th>
            <th>Skolēna vārds</th>
            <th>Apraksts</th>
            <th>Vērtējums</th>
        </tr>
        @foreach (var grade in Model)
        {
    <tr>
        <td>@grade.StudentSurname</td>
        <td>@grade.StudentName</td>
        <td>@grade.Comment</td>
        <td>@grade.Grade</td>
    </tr>
        }
    </table>
}
else
{
    <div>Šajā priekšmetā atzīmju nav</div>
}