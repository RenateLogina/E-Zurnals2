@model GradeModel
@{
    ViewData["Title"] = "Add grade";
}

<h2>Pievienot vērtējumu</h2>
@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Grade" asp-action="AddG" method="post">
    <div class="form-group">
        <label asp-for="SubjectName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="SubjectName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="StudentName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="StudentName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="StudentSurname" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="StudentSurname" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Grade" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Grade" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Comment" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>